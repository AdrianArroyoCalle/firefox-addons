{
	"manifest_version" : 2,
	"name" : "Send to Mail",
	"version" : "2.0.0",
	"description" : "Share a URL directly from your browser via email",
	"homepage_url" : "http://adrianarroyocalle.github.io/norax/",
	"icons" : {
		"16" : "icons/16.png",
		"48" : "icons/48.png",
		"96" : "icons/96.png"
	},
	"applications" : {
		"gecko" : {
			"id" : "send-to-mail@divel",
			"strict_min_version" : "45.*"
		}
	},
	"permissions" : ["contextMenus","activeTab","tabs","notifications"],
	"background" : {
		"scripts" : ["background/install.js","background/mail.js"]
	},
	"browser_action" : {
		"default_icon" : "icons/96.png"
	}
}
